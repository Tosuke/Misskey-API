{
	"compilerOptions": {
		"noEmitOnError": true,
		"noImplicitAny": false,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"sourceMap": false,
		"target": "ES6",
		"module": "commonjs",
		"removeComments": true,
		"noLib": true,
		"outDir": "built",
		"rootDir": "src",
		"declaration": false
	},
	"compileOnSave": false,
	"include": [
		"./node_modules/typescript/lib/lib.es6.d.ts",
		"./src/**/*.ts"
	]
}
